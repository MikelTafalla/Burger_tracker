<div class="container">
  <h1 class= "title">Eat Da' Burger</h1>
  <div class="row">
    <div class="col-sm-12">
      <img src = "public/assets/img/burger.png" alt="burger image" id="burgerPNG">
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <h3>Burgers to Eat</h3>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-sm-6">
      <h2>Devoured Burgers</h2>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 addBurger">

      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>
        <div class="form-group">
          <label for="devoured">Devoured?</label><br>
          <input type="radio" name="devoured" value="1" checked> Devoured!<br>
          <input type="radio" name="devoured" value="0"> Ready to Eat
        </div>

        <button type="submit">Add a Burger!</button>
      </form>
    </div>
  </div>
</div>
